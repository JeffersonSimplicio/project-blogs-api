{
  "openapi": "3.0.0",
  "info": {
    "title": "Blogs API",
    "summary": "Gerenciamento de blog",
    "description": "Gerencia o banco de dados de um blog, usuários, categorias e posts",
    "contact": {
      "name": "Jefferson Simplicio",
      "url": "https://www.linkedin.com/in/jefferson-simplicio/",
      "email": "jeffersonsimplicio.js@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "Development server"
    }
  ],
  "tags": [
    {
      "name": "User",
      "description": "Funcionalidades que envolvem usuários"
    }
  ],
  "paths": { 
    "/": {
      "get": {
        "summary": "Teste do servidor",
        "description": "Usado para verificar se o servidor esta funcionando",
        "response": {
          "200": {
            "description": "O servidor foi iniciado com sucesso",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login de usuário",
        "description": "Rota que o usuário usa para se logar ao sistema",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schema/user_login"
              },
              "examples": {
                "Lewis": {
                  "summary": "Exemplo de login de usuário",
                  "value": {
                    "email": "lewishamilton@gmail.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem sucedido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schema/response_login"
                },
                "examples": {
                  "Lewis": {
                    "summary": "Resultado de login bem sucedido",
                    "value": {
                      "user": "Lewis Hamilton",
                      "email": "lewishamilton@gmail.com",
                      "image": "https://upload.wikimedia.org/wikipedia/commons/1/18/Lewis_Hamilton_2016_Malaysia_2.jpg",
                      "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJlbWFpbCI6Imxld2lzaGFtaWx0b25AZ21haWwuY29tIiwidXNlciI6Ikxld2lzIEhhbWlsdG9uIiwiaWF0IjoxNjc5NDMxMjA1LCJleHAiOjE2Nzk1MTc2MDV9.d3di-rj71E_j7WPuYzZ42iciWZ6jC-Rrl_P-4glb9co"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "summary": "Email ou senha com problema",
            "description": "O email ou a senha não estão nos padrões exigidos pela API",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "Some required fields are missing"
                }
              }
            }
          },
          "404": {
            "summary": "Usuário não encontrado",
            "description": "O email ou a senha não correspondem a nenhum usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "User Not Found"
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "summary": "Criar usuário",
        "description": "Rota responsável pela criação de um novo usuário",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schema/user"
              },
              "examples": {
                "Brett": {
                  "summary": "Exemplo de criação de um novo usuário",
                  "value": {
                    "displayName": "Brett Wiltshire",
                    "email": "brett@email.com",
                    "password": "123456",
                    "image": "http://4.bp.blogspot.com/_YA50adQ-7vQ/S1gfR_6ufpI/AAAAAAAAAAk/1ErJGgRWZDg/S45/brett.png"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
                  "Lewis": {
                    "summary": "Retorno do usuário criado",
                    "description": "Ao criar um usuário ele recebe automaticamente um token para ter acesso ao sistema",
                    "value": {
                      "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJlbWFpbCI6ImJyZXR0QGVtYWlsLmNvbSIsInVzZXIiOiJCcmV0dCBXaWx0c2hpcmUiLCJpYXQiOjE2NjIwNTc3MTcsImV4cCI6MTY2MjE0NDExN30.i7TCvANclb_hTJZcutQX4yvW5jZ_fyK7_jsdF_kACBc"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schema": {
      "user_login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "response_login": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "user": {
            "type": "string"
          },
          "image": {
            "type": "string"
          }
        }
      },
      "user": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "image": {
            "type": "string"
          }
        }
      }
    },
    "securitySchema": {
      "userToken": {
        "name": "authorization",
        "in": "header",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}